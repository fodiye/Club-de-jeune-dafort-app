{
  "kind": "collectionType",
  "collectionName": "membres",
  "info": {
    "singularName": "membre",
    "pluralName": "membres",
    "displayName": "Membre",
    "description": "Les membres de l'association"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "nom": {
      "type": "string",
      "required": true
    },
    "initiales": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "couleur": {
      "type": "string"
    },
    "ordre": {
      "type": "integer"
    },
    "numero_membre": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "email": {
      "type": "email"
    },
    "date_adhesion": {
      "type": "date"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "cotisations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cotisation.cotisation",
      "mappedBy": "membre"
    }
  }
}
